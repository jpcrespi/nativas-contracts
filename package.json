{
  "name": "nativas-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile:clean": "rm -rf build && rm -rf types",
    "compile:typechain": "typechain --target=truffle-v5 --out-dir=types 'build/contracts/*.json'",
    "compile:truffle": "truffle compile",
    "compile": "yarn compile:clean && yarn compile:truffle && yarn compile:typechain",
    "migrate:clean": "rm -rf migrations",
    "migrate:typechain": "tsc --project tsconfig.migrate.json --outDir migrations",
    "migrate:truffle": "truffle migrate",
    "migrate": "yarn migrate:clean && yarn migrate:typechain && yarn migrate:truffle",
    "tests": "truffle test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.2",
    "truffle": "^5.11.1",
    "web3": "^1.10.0",
    "web3-core": "^1.10.0",
    "web3-eth": "^1.10.0",
    "web3-eth-accounts": "^1.10.0",
    "web3-eth-contract": "^1.10.0",
    "web3-utils": "^1.10.0"
  },
  "devDependencies": {
    "@typechain/truffle-v5": "^8.0.6",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/web3": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  }
}
